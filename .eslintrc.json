{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", "tab", {
            "MemberExpression": 2,
            "VariableDeclarator": 2
        }],
        "max-len": ["error", {
            "code": 150
        }],
        "no-tabs": 0,
        "no-mixed-spaces-and-tabs": 0,
        "import/no-unresolved": 0,
        "import/extensions": 0,
        "no-unused-vars": 0,
        "no-useless-constructor": 0
    }
}
